{
  "name": "torris-moe-backend",
  "version": "0.0.1",
  "description": "torris moe backend that powers the application",
  "main": "dist/index.js",
  "repository": "Please set",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "run-s clean compile",
    "clean": "rimraf ./dist",
    "compile": "tsc",
    "dev": "run-s migrate-up watch",
    "makemigrations": "./node_modules/.bin/migrate --migrations-dir ./src/migrations --es6 true create",
    "migrate-up": "tsx ./node_modules/.bin/migrate --autosync true --es6 true --migrations-dir ./src/migrations up",
    "format": "pretty-quick --loglevel=warn --cache --write ./src",
    "lint": "npx eslint --ext .js,.ts src/",
    "lint:fix": "npx eslint --fix --ext .js,.ts src/",
    "prestart": "migrate-up",
    "start": "node dist/index.js",
    "watch": "tsx watch src/index.ts"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.14",
    "@types/nodemailer-express-handlebars": "^4.0.5",
    "@types/nodemailer-smtp-transport": "^2.7.8",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "migrate-mongoose-typescript": "^3.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "pretty-quick": "^4.0.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "nodemailer-express-handlebars": "^6.1.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "winston": "^3.11.0",
    "znv": "^0.4.0",
    "zod": "^3.22.4"
  }
}
